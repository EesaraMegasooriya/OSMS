<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
         
         <servlet>
		<servlet-name>task_search</servlet-name>
		<servlet-class>com.Task.Task_SearchServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>task_search</servlet-name>
		<url-pattern>/task_search</url-pattern>
	</servlet-mapping>
	
       <servlet>
		<servlet-name>task_insert</servlet-name>
		<servlet-class>com.Task.Task_InsertServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>task_insert</servlet-name>
		<url-pattern>/task_insert</url-pattern>
	</servlet-mapping>
	   
	         <servlet>
		<servlet-name>task_update</servlet-name>
		<servlet-class>com.Task.Task_UpdateServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>task_update</servlet-name>
		<url-pattern>/task_update</url-pattern>
	</servlet-mapping>
	
	      <servlet>
		<servlet-name>task_delete</servlet-name>
		<servlet-class>com.Task.Task_DeleteServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>task_delete</servlet-name>
		<url-pattern>/task_delete</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>task_display</servlet-name>
		<servlet-class>com.Task.userTaskDisplayServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>task_display</servlet-name>
		<url-pattern>/task_display</url-pattern>
	</servlet-mapping>
         
</web-app>


